#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int nummer;

    int herrineren[3] = {0, 0, 0}; // voor de 3 mogelijkheden namelijk positief negatief en 0

    while(true) // die gaat blijven vragen aan de user tot als het fout is dus hier is dat -999

    nummer = get_int("Geef mij een nummer(bij -999 stopt het): \n");

    if (nummer == -999)
    {
        return 1;
    }
    else if(nummer > 0)
    {
        herrineren[0]++;
    }
    else if(nummer < 0)
    {
        herrineren[1]++;
    }
    else
    {
        herrineren[2]++;
    }

}

printf("Samenvatting:%i\n",);
printf("Positieve nummers:%i\n",herrineren[0]);
printf("negatieve nummers:%i\n",herrineren[1]);
printf("nullen:%i\n",herrineren[2]);
